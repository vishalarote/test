<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Solid</item> 
        <item name="android:actionDropDownStyle">@style/DropDownNav.Apptheme</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.ActionBar.OverFlow</item>
    </style>
    
    <style name="AppTheme.About" parent="AppTheme">
        <item name="android:windowBackground">@drawable/about_background</item>
    </style>

    <style name="AppTheme.ActionBar.Solid" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_background_textured</item>
        
        <!--<item name="android:background">@drawable/ab_solid</item>-->
        <!--
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_example</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_example</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Example</item>
        -->
    </style>
    
     <style name="DropDownNav.Apptheme" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_apptheme</item>
    </style>

    <style name="AppTheme.ActionBar.OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
 <style name="keyboard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="input_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item> <item name="android:gravity">center</item>
    </style>

    <style name="button_del">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/ic_dial_action_delete</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">onBtnClick</item>
    </style>

    <style name="keyboard_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">#ffffffff</item> <item  name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item> <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff33b5e5</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">onBtnClick</item>
    </style>

    <style name="DigitsTextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#ff33b5e5</item>
        <item name="android:freezesText">true</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>
</resources>